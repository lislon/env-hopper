generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Environment {
  syntheticId Int    @id @default(autoincrement())
  id          String @unique
  meta        String
}

model Application {
  syntheticId Int    @id @default(autoincrement())
  id          String @unique
  title       String @unique
  abbr        String @default("")
  aliases     String @default("[]")
  pages       String @default("[]")
  meta        String @default("{}")
}

model Substitution {
  syntheticId           Int     @id @default(autoincrement())
  id                    String  @unique
  title                 String
  isBrowserAutocomplete Boolean @default(false)
  isSharedAcrossEnvs    Boolean @default(false)
}

model UnstableCustomization {
  syntheticId              Int    @id @default(autoincrement())
  unstable__analytics_html String
  unstable__footer_html    String
}
