
message="$(cat $1)"
requiredPattern="^(fix|feat|chore|docs|style|refactor|test|release): .*$"
if ! echo "$message" | grep -Eq "$requiredPattern"; then
  echo "-"
  echo "-"
  echo "-"
  echo "ðŸš¨ Wrong commit message! ðŸ˜•"
  echo "The commit message must have this format:"
  echo "<verb in imperative mood> <what was done>"
  echo "Allowed verbs in imperative mood: fix|feat|chore|docs|style|refactor|test|release"
  echo "Example: feat: add login button"
  echo "-"
  echo "Your commit message was:"
  echo $message
  echo "-"
  echo "For more information, check script in .husky/commit-msg"
  echo "-"
  exit 1
fi
