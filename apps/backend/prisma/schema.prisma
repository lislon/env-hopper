generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Environment {
  id   Int    @id @default(autoincrement())
  name String @unique
  meta String
}

model Application {
  id        Int    @id @default(autoincrement())
  name      String @unique
  url       String
  urlPerEnv String
  meta      String @default("{}")
}

model Substitution {
  id                    Int     @id @default(autoincrement())
  name                  String  @unique
  title                 String
  isBrowserAutocomplete Boolean @default(false)
  isSharedAcrossEnvs    Boolean @default(false)
}
